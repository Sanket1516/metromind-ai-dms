{
  "name": "metromind-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for MetroMind platform",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:backend": "jest tests/backend",
    "test:frontend": "jest tests/frontend",
    "test:extension": "jest tests/extension", 
    "test:e2e": "jest tests/e2e",
    "test:ci": "jest --ci --coverage --testResultsProcessor=jest-junit",
    "test:integration": "jest --testNamePattern='integration|e2e'",
    "test:unit": "jest --testNamePattern='unit' --testPathIgnorePatterns=tests/e2e",
    "lint": "eslint tests/**/*.{js,ts,tsx} --fix",
    "clean": "rimraf coverage .nyc_output test-results",
    "pretest": "npm run clean"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/preset-typescript": "^7.18.0",
    "@testing-library/dom": "^8.19.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.0",
    "babel-jest": "^29.3.0",
    "eslint": "^8.30.0",
    "eslint-plugin-jest": "^27.1.0",
    "jest": "^29.3.0",
    "jest-environment-jsdom": "^29.3.0",
    "jest-environment-node": "^29.3.0",
    "jest-junit": "^15.0.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.0",
    "rimraf": "^3.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.{js,ts,tsx}",
      "<rootDir>/tests/**/*.spec.{js,ts,tsx}"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/dist/"
    ],
    "collectCoverageFrom": [
      "services/**/*.py",
      "frontend/src/**/*.{js,ts,tsx}",
      "browser-extension/**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/*.test.*",
      "!**/*.spec.*"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json-summary"
    ],
    "projects": [
      {
        "displayName": "Backend Tests",
        "testMatch": ["<rootDir>/tests/backend/**/*.test.{js,py}"],
        "testEnvironment": "node"
      },
      {
        "displayName": "Frontend Tests", 
        "testMatch": ["<rootDir>/tests/frontend/**/*.test.{js,ts,tsx}"],
        "testEnvironment": "jsdom",
        "setupFilesAfterEnv": ["<rootDir>/tests/frontend/setupTests.ts"],
        "moduleNameMapping": {
          "^@/(.*)$": "<rootDir>/frontend/src/$1"
        }
      },
      {
        "displayName": "Extension Tests",
        "testMatch": ["<rootDir>/tests/extension/**/*.test.js"],
        "testEnvironment": "jsdom",
        "globals": {
          "chrome": {}
        }
      },
      {
        "displayName": "E2E Tests",
        "testMatch": ["<rootDir>/tests/e2e/**/*.test.js"],
        "testEnvironment": "node",
        "testTimeout": 30000
      }
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "plugins": [
      "jest"
    ],
    "env": {
      "jest": true,
      "node": true,
      "browser": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/prefer-to-have-length": "warn",
      "jest/valid-expect": "error"
    }
  }
}